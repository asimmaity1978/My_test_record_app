<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MarksListActivity">


    <LinearLayout
        android:id="@+id/sandip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="10dp"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="5">


        <EditText
            android:id="@+id/input_test_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Test Name"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:inputType="textShortMessage"
            android:layout_weight="2"/>

        <EditText
            android:id="@+id/input_om"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:hint="OM"
            android:inputType="numberDecimal"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/input_fm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="FM"
            android:textColor="@android:color/black"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:inputType="numberDecimal"
            android:layout_weight="1"/>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:cardCornerRadius="5dp">


            <RelativeLayout
                android:id="@+id/input_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/teal_700">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="5dp"
                    android:text="ok"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"/>


            </RelativeLayout>




        </androidx.cardview.widget.CardView>




    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/marks_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sandip"
        android:layout_above="@id/mama">



    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/mama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0277BD"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp">


            <TextView
                android:id="@+id/average_marks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="85.55%"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:padding="7dp"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next Good"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#283593"
                android:textStyle="bold"
                android:padding="7dp"/>


        </androidx.cardview.widget.CardView>



    </LinearLayout>




</RelativeLayout>